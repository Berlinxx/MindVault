<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="mindvault.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:mindvault.Pages"
    FlyoutBehavior="Disabled">

  <!-- Customize how shell items render in the flyout: add spacing between icon and text -->
  <Shell.ItemTemplate>
    <DataTemplate>
      <Grid Padding="10">
        <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
          <Image Source="{Binding Icon}" WidthRequest="22" HeightRequest="22" VerticalOptions="Center" />
          <Label Text="{Binding Title}" VerticalOptions="Center" FontSize="14" TextColor="Black" />
        </HorizontalStackLayout>
      </Grid>
    </DataTemplate>
  </Shell.ItemTemplate>

  <!-- Start at Tagline -->
  <ShellContent Route="TaglinePage"
                ContentTemplate="{DataTemplate pages:TaglinePage}" />

  <!-- Onboarding -->
  <ShellContent Route="OnboardingPage"
                ContentTemplate="{DataTemplate pages:OnboardingPage}" />

  <!-- Set Profile -->
  <ShellContent Route="SetProfilePage"
                ContentTemplate="{DataTemplate pages:SetProfilePage}" />
 <!-- Set home page -->
  <ShellContent Route="HomePage"
                ContentTemplate="{DataTemplate pages:HomePage}" />

  <!-- Title Reviewer -->
  <ShellContent Route="TitleReviewerPage"
                ContentTemplate="{DataTemplate pages:TitleReviewerPage}" />

  <!-- Reviewer Editor -->
  <ShellContent Route="ReviewerEditorPage"
                ContentTemplate="{DataTemplate pages:ReviewerEditorPage}" />

  <!-- Add Flashcards -->
  <ShellContent Route="AddFlashcardsPage"
                ContentTemplate="{DataTemplate pages:AddFlashcardsPage}" />

  <!-- Summarize Content -->
  <ShellContent Route="SummarizeContentPage"
                ContentTemplate="{DataTemplate pages:SummarizeContentPage}" />

  <!-- Reviewers -->
  <ShellContent Route="ReviewersPage"
                ContentTemplate="{DataTemplate pages:ReviewersPage}" />

  <!-- Export -->
  <ShellContent Route="ExportPage"
                ContentTemplate="{DataTemplate pages:ExportPage}" />

  <!-- Import -->
  <ShellContent Route="ImportPage"
                ContentTemplate="{DataTemplate pages:ImportPage}" />

  <!-- Course Review -->
  <ShellContent Route="CourseReviewPage"
                ContentTemplate="{DataTemplate pages:CourseReviewPage}" />

  <!-- Reviewer Settings -->
  <ShellContent Route="ReviewerSettingsPage"
                ContentTemplate="{DataTemplate pages:ReviewerSettingsPage}" />
  <!-- Session Summary route only (no direct tab) -->
</Shell>
