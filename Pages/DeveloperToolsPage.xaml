<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mindvault.Pages.DeveloperToolsPage"
             Title="Developer Tools"
             BackgroundColor="{StaticResource PageBackgroundColor}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Header -->
            <Label Text="Developer Tools" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20"/>
            
            <!-- Database Location Section -->
            <Frame BorderColor="{StaticResource Primary}" 
                   BackgroundColor="{StaticResource CardBackground}"
                   Padding="15"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Database Location" 
                           FontSize="18" 
                           FontAttributes="Bold"/>
                    
                    <Label x:Name="DatabasePathLabel"
                           Text="Loading..."
                           FontSize="12"
                           LineBreakMode="CharacterWrap"/>
                    
                    <Button Text="Copy Path to Clipboard"
                            Clicked="OnCopyDatabasePathClicked"
                            BackgroundColor="{StaticResource Secondary}"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,10,0,0"/>
                    
                    <Button Text="Open Database Folder"
                            Clicked="OnOpenDatabaseFolderClicked"
                            BackgroundColor="{StaticResource Tertiary}"
                            TextColor="White"
                            CornerRadius="8"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Data Usage Section -->
            <Frame BorderColor="{StaticResource Primary}" 
                   BackgroundColor="{StaticResource CardBackground}"
                   Padding="15"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Data Usage" 
                           FontSize="18" 
                           FontAttributes="Bold"/>
                    
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                        <Label Text="Database:" Grid.Row="0" Grid.Column="0"/>
                        <Label x:Name="DatabaseSizeLabel" 
                               Text="0 KB" 
                               Grid.Row="0" 
                               Grid.Column="1"
                               FontAttributes="Bold"/>
                        
                        <Label Text="Python/Models:" Grid.Row="1" Grid.Column="0"/>
                        <Label x:Name="LocalAppDataSizeLabel" 
                               Text="0 MB" 
                               Grid.Row="1" 
                               Grid.Column="1"
                               FontAttributes="Bold"/>
                        
                        <Label Text="Total:" Grid.Row="2" Grid.Column="0" FontAttributes="Bold"/>
                        <Label x:Name="TotalSizeLabel" 
                               Text="0 MB" 
                               Grid.Row="2" 
                               Grid.Column="1"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}"/>
                    </Grid>
                    
                    <Button Text="Refresh Usage"
                            Clicked="OnRefreshUsageClicked"
                            BackgroundColor="{StaticResource Tertiary}"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Quick Actions Section -->
            <Frame BorderColor="{StaticResource Primary}" 
                   BackgroundColor="{StaticResource CardBackground}"
                   Padding="15"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Quick Actions" 
                           FontSize="18" 
                           FontAttributes="Bold"/>
                    
                    <Button Text="?? Reset Database Only"
                            Clicked="OnResetDatabaseClicked"
                            BackgroundColor="{StaticResource Warning}"
                            TextColor="White"
                            CornerRadius="8"/>
                    
                    <Button Text="?? Reset Python Environment"
                            Clicked="OnResetPythonClicked"
                            BackgroundColor="{StaticResource Warning}"
                            TextColor="White"
                            CornerRadius="8"/>
                    
                    <Button Text="?? Reset Settings Only"
                            Clicked="OnResetSettingsClicked"
                            BackgroundColor="{StaticResource Warning}"
                            TextColor="White"
                            CornerRadius="8"/>
                    
                    <BoxView HeightRequest="1" Color="{StaticResource Gray300}" Margin="0,10"/>
                    
                    <Button Text="??? RESET ALL DATA"
                            Clicked="OnResetAllDataClicked"
                            BackgroundColor="{StaticResource Danger}"
                            TextColor="White"
                            CornerRadius="8"
                            FontAttributes="Bold"/>
                    
                    <Label Text="?? Warning: This will delete everything and show onboarding screens again!"
                           FontSize="10"
                           TextColor="{StaticResource Danger}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Status Label -->
            <Label x:Name="StatusLabel"
                   Text=""
                   FontSize="14"
                   TextColor="{StaticResource Success}"
                   HorizontalOptions="Center"
                   IsVisible="False"/>
            
            <!-- Close Button -->
            <Button Text="Close"
                    Clicked="OnCloseClicked"
                    BackgroundColor="{StaticResource Gray500}"
                    TextColor="White"
                    CornerRadius="8"
                    Margin="0,20,0,0"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
