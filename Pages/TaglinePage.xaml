<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="mindvault.Pages.TaglinePage"
    Shell.NavBarIsVisible="False">

  <Grid>
    <!-- Gradient background to match your design -->
    <Grid.Background>
      <RadialGradientBrush Radius="0.85" Center="0.5,0.4">
        <GradientStop Color="#7ED6F6" Offset="0.0"/>
        <GradientStop Color="#0D63B6" Offset="1.0"/>
      </RadialGradientBrush>
    </Grid.Background>

    <!-- Centered tagline text -->
    <Label
        Text="Boost Your Mind, One&#10;Vault at a Time!"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        HorizontalTextAlignment="Center"
        FontSize="32"
        FontAttributes="Bold"
        TextColor="White"/>
  </Grid>
</ContentPage>
